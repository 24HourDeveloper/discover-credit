---
interface Props {
  title: string;
  description: string;
}
const { title, description } = Astro.props;
---

<div class="info">
  <h1>{title}</h1>
  <p>{description}</p>
</div>

<style>
  div.info {
		background-color: #23233f;
		color: #fff;
		padding: 20px;
		border-radius: 10px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.6);
		max-width: 28%;
	}
	div.info p {
		margin: 0;
		font-size: 20px;
    line-height: 1.6;
	}
	h1 {
		color: #ea6a28;
		font-size: 32px;
		margin-bottom: 10px;
	}
  @media screen and (max-width: 900px) {
    div.info {
      max-width: 26%;
    }
		h1 {
      font-size: 24px;
      text-align: center;
		}
    div.info p {
      font-size: 18px;
      text-align: center;
    }
	}
  @media screen and (max-width: 650px) {
    div.info {
      max-width: 100%;
      padding: 10px;
    }
    h1 {
      font-size: 28px;
      text-align: center;
    }
    div.info p {
      font-size: 20px;
      text-align: center;
      line-height: 1.3;
    }
  }
</style>